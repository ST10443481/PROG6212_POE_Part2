@model CMCS.Web.Models.DashboardViewModel
@{
    ViewData["Title"] = "Monthly Claims Dashboard";
}

<div class="container py-4">
    <div class="d-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 fw-bold text-primary m-0">Monthly Claims Dashboard</h1>
        <a class="btn btn-primary shadow-sm" href="/Claims/New">+ New Claim</a>
    </div>

    <div class="row g-3">
        <div class="col-6 col-md-2">
            <div class="card text-center border-0 shadow-sm bg-light">
                <div class="card-body">
                    <div class="small text-muted">Draft</div>
                    <div class="display-6 text-secondary fw-bold">@Model.DraftCount</div>
                </div>
            </div>
        </div>
        <div class="col-6 col-md-2">
            <div class="card text-center border-0 shadow-sm bg-info-subtle">
                <div class="card-body">
                    <div class="small text-muted">Submitted</div>
                    <div class="display-6 text-info fw-bold">@Model.SubmittedCount</div>
                </div>
            </div>
        </div>
        <div class="col-6 col-md-2">
            <div class="card text-center border-0 shadow-sm bg-success-subtle">
                <div class="card-body">
                    <div class="small text-muted">Approved</div>
                    <div class="display-6 text-success fw-bold">@Model.ApprovedCount</div>
                </div>
            </div>
        </div>
        <div class="col-6 col-md-2">
            <div class="card text-center border-0 shadow-sm bg-danger-subtle">
                <div class="card-body">
                    <div class="small text-muted">Rejected</div>
                    <div class="display-6 text-danger fw-bold">@Model.RejectedCount</div>
                </div>
            </div>
        </div>
        <div class="col-6 col-md-2">
            <div class="card text-center border-0 shadow-sm bg-warning-subtle">
                <div class="card-body">
                    <div class="small text-muted">Settled</div>
                    <div class="display-6 text-warning fw-bold">@Model.SettledCount</div>
                </div>
            </div>
        </div>
        <div class="col-12 col-md-2">
            <div class="card text-center border-0 shadow-sm bg-primary-subtle">
                <div class="card-body">
                    <div class="small text-muted">Approved Value</div>
                    <div class="h4 fw-bold text-primary">R @Model.TotalApprovedAmount</div>
                </div>
            </div>
        </div>
    </div>

    <div class="row g-3 mt-4">
        <div class="col-12 col-lg-6">
            <div class="card shadow-sm">
                <div class="card-header text-primary">Pending Verification</div>
                <div class="card-body p-0">
                    <table class="table table-sm table-hover m-0 align-middle">
                        <thead class="table-light">
                            <tr>
                                <th>ID</th>
                                <th>Lecturer</th>
                                <th>Hours</th>
                                <th>Amount</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (!Model.RecentPending.Any())
                            {
                                <tr><td colspan="5" class="text-center text-muted py-3">No pending claims</td></tr>
                            }
                            else
                            {
                                foreach (var c in Model.RecentPending)
                                {
                                    <tr>
                                        <td>@c.Id</td>
                                        <td>@c.Lecturer</td>
                                        <td>@c.HoursWorked</td>
                                        <td>R @c.Amount</td>
                                        <td class="text-end">
                                            <a class="btn btn-sm btn-outline-secondary" href="/Claims/Detail/@c.Id">View</a>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <div class="col-12 col-lg-6">
            <div class="card shadow-sm">
                <div class="card-header text-primary">Recent Activity</div>
                <div class="card-body p-0">
                    <table class="table table-sm table-hover m-0 align-middle">
                        <thead class="table-light">
                            <tr>
                                <th>When</th>
                                <th>ID</th>
                                <th>Status</th>
                                <th>Amount</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (!Model.RecentActivity.Any())
                            {
                                <tr><td colspan="5" class="text-center text-muted py-3">No activity yet</td></tr>
                            }
                            else
                            {
                                foreach (var c in Model.RecentActivity)
                                {
                                    <tr>
                                        <td>@((c.UpdatedAt > c.CreatedAt ? c.UpdatedAt : c.CreatedAt).ToLocalTime().ToString("yyyy-MM-dd HH:mm"))</td>
                                        <td>@c.Id</td>
                                        <td>
                                            <span class="badge @(c.Status == CMCS.Web.Models.ClaimStatus.Approved || c.Status == CMCS.Web.Models.ClaimStatus.Settled ? "bg-success" : c.Status == CMCS.Web.Models.ClaimStatus.Rejected ? "bg-danger" : "bg-warning text-dark")">
                                                @c.Status
                                            </span>
                                        </td>
                                        <td>R @c.Amount</td>
                                        <td class="text-end">
                                            <a class="btn btn-sm btn-outline-secondary" href="/Claims/Detail/@c.Id">View</a>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
